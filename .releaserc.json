{
  "branches": [
    "main",
    "develop",
    "release",
    "feat",
    "build",
    "docs",
    "chore",
    "ci",
    "style",
    "refactor",
    "test",
    "!HOTFIX",
    {"name": "develop/*", "prerelease": true},
    {"name": "release/*", "prerelease": true},
    {"name": "feat/*", "prerelease": true},
    {"name": "fix/*", "prerelease": true},
    {"name": "build/*", "prerelease": true},
    {"name": "docs/*", "prerelease": true},
    {"name": "chore/*", "prerelease": true},
    {"name": "ci/*", "prerelease": true},
    {"name": "style/*", "prerelease": true},
    {"name": "refactor/*", "prerelease": true},
    {"name": "test/*", "prerelease": true},
    {"name": "!BREAKING CHANGE/*", "prerelease": true},
    {"name": "!HOTFIX/*", "prerelease": true}
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "breaking", "release": "major" },
          { "type": "no-release", "release": false },
          { "type": "build", "release": false },
          { "type": "chore", "release": false },
          { "type": "content", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "style", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "deploy", "release": "patch" },
          { "type": "!BREAKING CHANGE", "release": "patch" },
          { "type": "!HOTFIX", "release": "patch" }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "build",
              "section": "‚öôÔ∏è SYSTEM BUILD & EXTERNAL PACKAGES",
              "hidden": true
            },
            {
              "type": "chore",
              "section": "üì¶ CHORES",
              "hidden": true
            },
            {
              "type": "content",
              "section": "üìù CONTENT UPDATES",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "üìö DOCUMENTATION",
              "hidden": false
            },
            {
              "type": "feat",
              "section": "üöÄ NEW FEATURES",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "üêõ BUG FIXES",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "‚ôªÔ∏è REFACTORING",
              "hidden": false
            },
            {
              "type": "style",
              "section": "üé® STYLES",
              "hidden": false
            },
            {
              "type": "test",
              "section": "‚úÖ TESTING",
              "hidden": true
            },
            {
              "type": "deploy",
              "section": "üöÄ DEPLOYMENTS",
              "hidden": false
            }
          ]
        },
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        },
        "writerOpts": {
          "commitsSort": ["subject", "scope"]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# CHANGELOG"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "pkgRoot": ".",
        "npmPublish": false
      }
    ],
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
        "message": "chore: ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}